<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/item_clients_background"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="70dp">



    <TextView
        android:id="@+id/report_client_name_inReport"
        android:layout_width="220dp"
        android:layout_height="20dp"
        android:layout_marginStart="68dp"
        android:text="Имя клиента"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.106" />

    <TextView
        android:id="@+id/report_objects_meterage"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginStart="68dp"
        android:text="Обьекты измерения: 0"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report_client_name_inReport" />

    <RadioButton
        android:id="@+id/report_client_radioButton"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:clickable="false"
        android:focusable="false"
        app:buttonTint="@color/radio_button_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/to_select_measurements_button"
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_marginEnd="16dp"
        android:background="@null"
        android:rotation="-90"
        android:scaleType="fitCenter"
        app:tint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.448"
        app:srcCompat="@drawable/m3_split_button_chevron_avd" />

</androidx.constraintlayout.widget.ConstraintLayout>